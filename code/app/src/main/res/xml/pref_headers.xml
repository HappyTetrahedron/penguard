<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="default server"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:key="@string/pref_key_server_address"
        android:inputType="text"
        android:title="@string/ServerIPURL" />

    <EditTextPreference
        android:defaultValue="default port"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:key="@string/pref_key_port"
        android:inputType="number"
        android:title="@string/ServerPort" />

</PreferenceScreen>
